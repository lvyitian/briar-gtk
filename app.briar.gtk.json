{
    "app-id": "app.briar.gtk",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.28",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.openjdk10"
    ],
    "command": "briar_gtk",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "build-options": {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "openjdk",
            "buildsystem": "simple",
            "build-commands": [
                "/usr/lib/sdk/openjdk10/install.sh",
                "/usr/lib/sdk/openjdk10/installjdk.sh",
                "/usr/lib/sdk/openjdk10/enable.sh"
            ]
        },
        {
            "name": "briar_gtk",
            "buildsystem": "meson",
            "config-opts": [ "--libdir=lib" ],
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "file:///home/nico/Work/Current/Briar/briar_gtk"
                }
            ]
        }
    ]
}